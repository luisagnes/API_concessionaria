{
    "openapi": "3.0.3",
    "info": {
        "title": "Concessionaria API",
        "description": "API Rest da Concessionaria Yamaha",
        "version": "0.0.1"
    },
    "paths": {
        "/estoque": {
            "description": "Estoque de motos",
            "get": {
                "description": "lista em estoque na concessionaria",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Estoque"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/boletos": {
            "description": "Boletos de pagamento",
            "get": {
                "description": "lista de boletos a pagar ou pagos",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Boletos"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/boletos/{id}": {
            "get": {
                "description": "Exibe um boleto pelo ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Boletos"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "NÃ£o encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Estoque": {
                "type": "object",
                "properties": {
                    "Ano_de_fabricacao": {
                        "type": "string",
                        "example": "2021/22"
                    },
                    "Modelo": {
                        "type": "object",
                        "properties": {
                            "nome": {
                                "type": "string",
                                "example": "moto 1"
                            }
                        }
                    },
                    "Quantidade": {
                        "type": "string",
                        "example": "0"
                    },
                    "Preco": {
                        "type": "string",
                        "example": "R$28.000,00"
                    }
                }
            },
            "Boletos": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "1"
                    },
                    "data-entrada": {
                        "type": "string",
                        "example": "05/05/2022"
                    },
                    "vencimento": {
                        "type": "string",
                        "example": "05/06/2022"
                    },
                    "valor": {
                        "type": "string",
                        "example": "R$250,00"
                    },
                    "situacao": {
                        "type": "string",
                        "example": "Pago"
                    }
                }
            }
        }
    }
}